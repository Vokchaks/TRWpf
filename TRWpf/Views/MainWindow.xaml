        xmlns:shell="clr-namespace:Microsoft.Windows.Shell;assembly=Microsoft.Windows.Shell"     
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowState="Normal" Height="600" Width="1000"
        Title="TRWpf" >

